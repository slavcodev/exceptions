{
  "name": "zeeproject/exceptions",
  "description": "Set of the base exceptions",
  "license": "BSD-2-Clause",
  "homepage": "https://github.com/zee/exceptions",
  "keywords": [
    "exceptions",
    "logging"
  ],
  "authors": [
    {
      "name": "Veaceslav Medvedev",
      "email": "slavcopost@gmail.com",
      "homepage": "https://github.com/slavcodev"
    },
    {
      "name": "All awesome contributors",
      "homepage": "https://github.com/zee/exceptions/graphs/contributors"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "scrutinizer/ocular": "~1.5"
  },
  "autoload": {
    "psr-4": {
      "Zee\\Exceptions\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zee\\Exceptions\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@test"
    ],
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-clover build/logs/clover.xml",
    "test-show-coverage": "phpunit --coverage-clover build/logs/clover.xml --coverage-text=php://stdout"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0.x-dev"
    }
  }
}
